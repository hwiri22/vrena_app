<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vrena.vrena_app">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.vrena.vrena_app.Activity_Dashboard"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vrena.vrena_app.Activity_BikeCadenceSampler"
            android:label="Bike Cadence Plugin Sampler" 
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity
            android:name="com.vrena.vrena_app.Activity_BikeSpeedDistanceSampler"
            android:label="Bike Speed and Distance Plugin Sampler" 
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
    </application>

</manifest>